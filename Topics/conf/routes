POST /topics/:topic              donebyme.topics.controllers.TopicsController.append(topic: String)
GET  /topics/:topic/logs/current donebyme.topics.controllers.TopicsController.currentLog(topic: String)
GET  /topics/:topic/logs/:id     donebyme.topics.controllers.TopicsController.log(topic: String, id: String)
GET  /topics/:topic/messages/:id donebyme.topics.controllers.TopicsController.message(topic: String, id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
